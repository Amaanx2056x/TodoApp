<!DOCTYPE html>
<html>
<head>
  {{>links}}
  <title>Home Page</title>
  <link rel="stylesheet" href='/css/main.css'>
</head>
<body>
  <div class="wrap">
    {{>notifs}}
    <div class="row d-flex justify-content-center container">
      <div class="col-md-12">
        <div class="card-hover-shadow-2x mb-3 card h-100 w-100">
          <div class="card-header-tab card-header">
            <div class="card-header-title font-size-lg text-capitalize font-weight-normal">

              <i class="fa fa-tasks"></i>&nbsp;Task List

            </div>
            <div class="badge badge-pill badge-success ml-3">
              {{logged.username}}
            </div>
            <button id="logout-toggler" class="border-0 btn-transition btn btn-outline-danger"><i class="fa fa-power-off"></i> </button>
          </div>
          <div class="boxed scroll-area-sm">
            <perfect-scrollbar class="ps-show-limits">
              <div style="position: static;" class="ps ps--active-y">
                <div class="ps-content">
                  <ul id="tasklist" class=" list-group list-group-flush">
                    {{#if tasks}}
                    {{#each tasks}}
                    <li class="list-group-item">

                      {{#if completed}}
                      <div class="todo-indicator bg-success"></div>
                      {{else}}
                      <div class="todo-indicator bg-warning"></div>
                      {{/if}}
                      <div class="widget-content p-0">
                        <div class="widget-content-wrapper">
                          <div class="widget-content-left mr-2">

                          </div>
                          <div data-id="{{id}}" class="singleTask widget-content-left">
                            <div class="widget-heading">
                              {{title}}
                              {{#if completed}}
                              <div class="badge badge-pill badge-success ml-2">
                                DONE
                              </div>
                              {{/if}}
                            </div>

                            <div class="widget-subheading">
                              <i>{{dateFormat createdAt 'llll'}}</i>
                            </div>
                          </div>
                          <div class="widget-content-right">
                            {{#unless completed}}
                            <button data-id="{{id}}" id="markDone" class="border-0 btn-transition btn btn-outline-success"> <i class="fa fa-check"></i></button>
                            {{/unless}}
                            <button data-id="{{id}}" class="deleteTask border-0 btn-transition btn btn-outline-danger"> <i class="fa fa-trash"></i> </button>
                          </div>
                        </div>
                      </div>
                    </li>
                    {{/each}}
                    {{else}}
                    <div class="emptyTaskList">
                      No Tasks found
                    </div>
                    {{/if}}
                  </ul>
                </div>
              </div>
            </perfect-scrollbar>
          </div>
          <div class="d-block text-right card-footer">

            <button class="newTask btn btn-primary">Add Task</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{>modals}}
{{>scripts}}
</body>
</html>